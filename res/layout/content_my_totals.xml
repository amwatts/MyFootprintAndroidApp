<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_totals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wattsup.alissa.myfootprint.MyTotals"
    tools:showIn="@layout/activity_my_totals">

    <TextView android:id="@+id/totalsBanner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="My Totals"
        android:theme="@style/banner"
        android:padding="10dp"/>

    <ListView  android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/totalsBanner"
        android:layout_gravity="center_horizontal" />

    <include layout="@layout/navigationbar"/>

</RelativeLayout>
