<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_averages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.wattsup.alissa.myfootprint.MyAverages"
    tools:showIn="@layout/activity_my_averages">

    <TextView android:id="@+id/averageBanner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="My Averages"
        android:theme="@style/banner"
        android:padding="10dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/averageBanner"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"/>

    <include layout="@layout/navigationbar"/>

</RelativeLayout>
